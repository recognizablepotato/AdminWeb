@model AdministrationMng.Models.Opportunity

@{
    ViewBag.Title = "DeleteOpportunity";
}
<head runat="server">

    <script type="text/javascript" language="javascript">
        function ConfirmOnDelete() {
            var r = confirm("Please Confirm that you would like to Delete this Opportunity")
            if (r == true)
                return true;
            else
                return false;

        }
    </script>
</head>
<h2>Delete Opportunity</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Opportunity</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
             Opportunity Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Center)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Center)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" OnClick="return ConfirmOnDelete()" /> |
            @Html.ActionLink("Back to List", "Index", "Home")
        </div>
    }
</div>
